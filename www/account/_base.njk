{% set bodyClass = 'account' %}
{% extends '_partials/base.njk' %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/account.css" />
{% endblock %}

{% block main %}
<div class="container">
    <div class="row">
        <div class="column three">
            <ul>
                <li><a href="javascript:;" title="">Dashboard</a></li>
                <li><a href="javascript:;" title="">Api keys</a></li>
                <li><a href="javascript:;" title="">Invoices</a></li>
                <li><a href="javascript:;" title="">Account settings</a></li>
                <li><a href="javascript:;" title="">---</a></li>
                <li><a href="javascript:;" title="">Logout</a></li>
            </ul>
        </div>
        <div class="column nine">
            {% block account_body %}{% endblock %}
        </div>
    </div>
</div>
<script>
    (function () {
        if (document.location.search.indexOf('heroku=1') > -1) {
            var s = document.createElement('script')
            s.src = 'https://s3.amazonaws.com/assets.heroku.com/boomerang/boomerang.js'
            s.async = true
            s.onload = () => {
                window.Boomerang.init({app: '', addon: 'pdfshift'})
            }
            document.querySelector('body').appendChild(s)
        }

        document.querySelector('main .container .column.three .logout>a').addEventListener('click', function () {
            window.PDFShift.storage.remove('token');
            window.location.href = '/';
        }, false);
    })()
</script>
{% endblock %}