            for (var i = 0; i < blocks.length; i++) {
                hljs.highlightBlock(blocks[i]);
            }

            var code = document.querySelector('#code');

            code.querySelector('.code-selection').addEventListener('click', function (event) {
                if (event.target.nodeName !== 'A') {
                    return;
                }

                window.PDFShift.storage.set('language', event.target.dataset.language);

                code.querySelector('.code-samples>.visible').classList.remove('visible');
                code.querySelector('.code-samples>#code-' + event.target.dataset.language).classList.add('visible');
                code.querySelector('.code-selection>.selected').classList.remove('selected');
                event.target.parentElement.classList.add('selected');
            }, false)

            if (ClipboardJS.isSupported()) {
                function setCopyEvent(target) {
                    var parent = target.parentElement, innerText = null;
                    while (true) {
                        if (parent === null) {
                            return // We can't find it so we stop, useless to continue ...
                        }
                        if (parent.classList.contains('code-section')) {
                            break
                        }
                        parent = parent.parentElement;
                    }

                    innerText = parent.querySelector('pre>code').innerText;

                    var clipboard = new ClipboardJS(target, {
                        'text': function (trigger) {
                            return innerText
                        }
                    })

                    clipboard.on('success', function (e) {
                        // this.resetCopyMessage('Copied!')
                        target.innerText = 'Copied!'
                        target.classList.add('button-disabled')
                        setTimeout(function () {
                            target.innerText = 'Copy to clipboard';
                            target.classList.remove('button-disabled')
                        }, 5000)
                        e.clearSelection()
                    })

                    clipboard.on('error', function (e) {
                        target.innerText = 'An error occured!'
                        target.classList.add('button-disabled')
                    })
                }

                var buttons = code.querySelectorAll('.code-samples .code-section .copy>a');
                for (var i = 0 ; i < buttons.length; i++) {
                    setCopyEvent(buttons[i]);
                }
            }
        });
