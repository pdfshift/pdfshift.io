                function (json) {
                    submitButton.classList.remove('button-disabled');
                    window.open(json.url, '_blank').focus();
                },
                function (response) {
                    var error = 'A fatal error occured.';
                    if (response.data) {
                        if (response.data.hasOwnProperty('error')) {
                            error = response.data.error;
                        } else if (response.data.hasOwnProperty('errors')) {
                            var keyname = Object.keys(response.data.errors)[0]
                            error = keyname + ' : ' + response.data.errors[keyname][0]
                        }
                    }
                    form.classList.add('error')
                    form.querySelector('p.error').innerText = error
                    submitButton.classList.remove('button-disabled');
                }
            )

            return false;
        }, true)
    })();

    // Code blocks
    window.PDFShift.onReady(function () {
        window.PDFShift.load(['//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.13.1/highlight.min.js', '//cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.0/clipboard.min.js'], function () {
            // Highlighting the blocks:
