    ```c-sharp
    HttpClient client = new HttpClient();
    client.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue(
        "Basic",
        Convert.ToBase64String(
            System.Text.ASCIIEncoding.ASCII.GetBytes(string.Format("{0}:{1}", "your_api_key", ""))
        )
    );

    var values = new Dictionary<string, string>
    {
        { "source", "https://www.pdfshift.io/documentation" },
        { "landscape", "false" },
        { "use_print", "false" }
    };

    var content = new FormUrlEncodedContent(values);
    var response = await client.PostAsync("https://api.pdfshift.io/v2/convert/", content);
    var binaryPdf = await response.Content.ReadAsByteArrayAsync();
